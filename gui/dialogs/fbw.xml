<PropertyList>

	<name>fbw</name>
	<layout>vbox</layout>

    <group>
        <layout>hbox</layout>
        <text>
            <halign>left</halign>
            <label>FBW Control</label>
        </text>
        <button>
            <halign>right</halign>
            <pref-width>20</pref-width>
            <pref-height>20</pref-height>
            <legend>X</legend>
            <key>Esc</key>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>
	
    <hrule/>

	<group>
		<layout>vbox</layout>
		
		<button>
			<legend>TOGGLE FBW</legend>
            <pref-width>150</pref-width>
			<binding>
				<command>property-toggle</command>
				<property>/fdm/jsbsim/fbw/enable</property>
			</binding>
			<live>true</live>
		</button>
		
		<text>
			<label>[ENABLED]</label>
			<visible>
				<equals>
					<property>/fdm/jsbsim/fbw/enable</property>
					<value>1</value>
				</equals>
			</visible>
		</text>
	
	</group>
	
	<group>
		<layout>vbox</layout>
		
		<group>
			<layout>hbox</layout>

			<hrule>
				<stretch type="bool">true</stretch>
			</hrule>
			<text>
				<label>Foreplane</label>
			</text>
			<hrule>
				<stretch type="bool">true</stretch>
			</hrule>
		</group>
		
		<group>
			<layout>hbox</layout>
			
			<group>
				<layout>vbox</layout>
				
				<text>
					<label>L: </label>
				</text>
				<slider>
					<row>2</row>
					<col>0</col>
					<pref-height>150</pref-height>
					<vertical>true</vertical>
					<property>/fdm/jsbsim/fcs/foreplane-L-deg</property>
					<min>-16</min>
					<max>16</max>
					<step>0.0016</step>
					<live>true</live>
				</slider>
			</group>
				
			<group>
				<layout>vbox</layout>
				
				<text>
					<label>R: </label>
				</text>
				<slider>
					<row>2</row>
					<col>0</col>
					<pref-height>150</pref-height>
					<vertical>true</vertical>
					<property>/fdm/jsbsim/fcs/foreplane-R-deg</property>
					<min>-16</min>
					<max>16</max>
					<step>0.0016</step>
					<live>true</live>
				</slider>
			</group>
		</group>
		
		<group>
			<layout>hbox</layout>

			<hrule>
				<stretch type="bool">true</stretch>
			</hrule>
			<text>
				<label>Elevon</label>
			</text>
			<hrule>
				<stretch type="bool">true</stretch>
			</hrule>
		</group>
		
		<group>
			<layout>hbox</layout>
			
			<group>
				<layout>vbox</layout>
				
				<text>
					<label>1L: </label>
				</text>
				<slider>
					<row>2</row>
					<col>0</col>
					<pref-height>150</pref-height>
					<vertical>true</vertical>
					<property>/fdm/jsbsim/fcs/elevon-1L-deg</property>
					<min>-25</min>
					<max>16</max>
					<step>0.0025</step>
					<live>true</live>
				</slider>
			</group>
				
			<group>
				<layout>vbox</layout>
		
				<text>
					<label>2L: </label>
				</text>
				<slider>
					<row>2</row>
					<col>0</col>
					<pref-height>150</pref-height>
					<vertical>true</vertical>
					<property>/fdm/jsbsim/fcs/elevon-2L-deg</property>
					<min>-25</min>
					<max>16</max>
					<step>0.0025</step>
					<live>true</live>
				</slider>
			</group>
			
			<group>
				<layout>vbox</layout>
		
				<text>
					<label>2R: </label>
				</text>
				<slider>
					<row>2</row>
					<col>0</col>
					<pref-height>150</pref-height>
					<vertical>true</vertical>
					<property>/fdm/jsbsim/fcs/elevon-2R-deg</property>
					<min>-25</min>
					<max>16</max>
					<step>0.0025</step>
					<live>true</live>
				</slider>
			</group>
			
			<group>
				<layout>vbox</layout>
				
				<text>
					<label>1R: </label>
				</text>
				<slider>
					<row>2</row>
					<col>0</col>
					<pref-height>150</pref-height>
					<vertical>true</vertical>
					<property>/fdm/jsbsim/fcs/elevon-1R-deg</property>
					<min>-25</min>
					<max>16</max>
					<step>0.0025</step>
					<live>true</live>
				</slider>
			</group>
		</group>
		
		<group>
			<layout>hbox</layout>

			<hrule>
				<stretch type="bool">true</stretch>
			</hrule>
			<text>
				<label>Rudder</label>
			</text>
			<hrule>
				<stretch type="bool">true</stretch>
			</hrule>
		</group>
		
		<group>
			<layout>hbox</layout>
			
			<group>
				<layout>vbox</layout>
				
				<slider>
					<pref-width>150</pref-width>
					<property>/fdm/jsbsim/fcs/rudder-deg</property>
					<min>-25</min>
					<max>25</max>
					<step>0.0025</step>
					<live>true</live>
				</slider>
			</group>
		</group>
	</group>
	
</PropertyList>
