<?xml version="1.0"?>

<!--
************************************************************************
Eurofighter Typhoon simulation config.

By MaverickAlex, D. Faber, AlMurSi & Algernon
************************************************************************
-->
<PropertyList>
    <sim include="typhoon-config.xml">
        <description>EFA (Eurofighter) Typhoon</description>
        <author>Maverick Alex, Justin Nicholson (pinto), Joshua Davidson (Octal450), and others</author>
        <status>Special Edition</status>
        <aircraft-version>1.5X</aircraft-version>
        <flight-model>jsb</flight-model>
        <aero>typhoon-jsbsim</aero>
        <startup>
            <splash-texture>Aircraft/eurofighter/Splash2.jpg</splash-texture>
        </startup>
        <preferences>
            <start-running type="bool">true</start-running>
        </preferences>

        <gui>
            <dialogs>
                <radios>
                    <transponder-mode type="string">ON</transponder-mode>
                </radios>
            </dialogs>
        </gui>

        <model>
            <path>Aircraft/eurofighter/Models/Typhoon.xml</path>
            <livery>
                <file type="string"/>
                <RAFlights type="bool"/>
                <beacon type="bool"/>
                <strobe type="bool"/>
            </livery>
        </model>
        <!--<help include="gui/typhoon-help.xml"></help>
        <menubar include="Dialogs/typhoon-menu.xml"></menubar>-->
        <menubar>
            <default>
                <menu n="101">
                    <label>Dev</label>
                    <item>
                        <label>FBW Control</label>
                        <binding>
                            <command>dialog-show</command>
                            <dialog-name>fbw</dialog-name>
                        </binding>
                    </item>
                    <item>
                        <label>Tune Drag</label>
                        <binding>
                            <command>nasal</command>
                            <script>dialog.tuner_drag_dialog.open()</script>
                        </binding>
                    </item>
                    <item>
                        <label>Tune Lift</label>
                        <binding>
                            <command>nasal</command>
                            <script>dialog.tuner_lift_dialog.open()</script>
                        </binding>
                    </item>
                    <item>
                        <label>Tune Pitch</label>
                        <binding>
                            <command>nasal</command>
                            <script>dialog.tuner_pitch_dialog.open()</script>
                        </binding>
                    </item>
                    <item>
                        <label>Tune Roll</label>
                        <binding>
                            <command>nasal</command>
                            <script>dialog.tuner_roll_dialog.open()</script>
                        </binding>
                    </item>
                    <item>
                        <label>Tune Side</label>
                        <binding>
                            <command>nasal</command>
                            <script>dialog.tuner_side_dialog.open()</script>
                        </binding>
                    </item>
                    <item>
                        <label>Tune Yaw</label>
                        <binding>
                            <command>nasal</command>
                            <script>dialog.tuner_yaw_dialog.open()</script>
                        </binding>
                    </item>
                    <item>
                        <name>a-submenu</name>
                        <enabled>false</enabled>
                    </item>
                    <item>
                        <label>Dump Prop Tree</label>
                        <binding>
                            <command>nasal</command><![CDATA[some stuff]]>
                            <script>
                                io.write_properties( path: getprop("/sim/fg-home") ~ "/Export/MiG-21bis/prop_tree_dump.xml", prop: "/" );
                            </script>
                        </binding>
                    </item>
                </menu>
            </default>
        </menubar>
        <wildlife>
            <birdsong type="bool">true</birdsong>
            <birdsong-volume type="double">0.75</birdsong-volume>
        </wildlife>
        <rendering>
            <redout>
                <enabled type="bool">true</enabled>
                <parameters>
                    <blackout-onset-g type="double">7.5</blackout-onset-g>
                    <onset-blackout-sec type="double">300</onset-blackout-sec>
                    <blackout-complete-g type="double">11</blackout-complete-g>
                    <fast-blackout-sec type="double">10</fast-blackout-sec>
                    <redout-onset-g type="double">-2</redout-onset-g>
                    <onset-redout-sec type="double">45</onset-redout-sec>
                    <redout-complete-g type="double">-4</redout-complete-g>
                    <fast-redout-sec type="double">7.5</fast-redout-sec>
                    <recover-fast-sec type="double">7</recover-fast-sec>
                    <recover-slow-sec type="double">15</recover-slow-sec>
                </parameters>
            </redout>
            <headshake>
                <enabled type="bool" userarchive="y">true</enabled>
            </headshake>
            <als-secondary-lights>
                <landing-light1-offset-deg type="double">0</landing-light1-offset-deg>
                <landing-light2-offset-deg type="double">0</landing-light2-offset-deg>
                <landing-light3-offset-deg type="float">0</landing-light3-offset-deg>
            </als-secondary-lights>
            <shadow-volume type="bool">true</shadow-volume>
        </rendering>
        
        <flaps>
            <setting>0.0</setting>
            <setting>0.5</setting>
            <setting>1.0</setting>
        </flaps>
    </sim>

    <controls>
        <canopy>
            <position-norm>0</position-norm>
        </canopy>
    </controls>

    <!--<systems include="typhoon-systems.xml" />-->
    <identification>
        <aircraft-number type="string" archive="y">XP-210</aircraft-number>
        <pilot-name type="string" archive="y"></pilot-name>
    </identification>
    <input n="0">
        <mice n="0">
            <mouse n="0">
                <mode n="0">
                    <button n="3">
                        <binding n="0">
                            <script></script>
                        </binding>
                        <binding n="1">
                            <condition>
                                <and>
                                    <property>/devices/status/mice/mouse[0]/button[2]</property>
                                    <not><property>/sim/mouse/right-button-mode-cycle-enabled</property></not>
                                </and>
                            </condition>
                            <command>nasal</command>
                            <script>libraries.fovZoom(-1);</script>
                        </binding>
                    </button>
                    <button n="4">
                        <binding n="0">
                            <script></script>
                        </binding>
                        <binding n="1">
                            <condition>
                                <and>
                                    <property>/devices/status/mice/mouse[0]/button[2]</property>
                                    <not><property>/sim/mouse/right-button-mode-cycle-enabled</property></not>
                                </and>
                            </condition>
                            <command>nasal</command>
                            <script>libraries.fovZoom(1);</script>
                        </binding>
                    </button>
                </mode>
            </mouse>
        </mice>
        <keyboard include="Input/typhoon-keyboard.xml" />
    </input>
    <!--canopy>
        <position-norm type="double">1</position-norm>
    </canopy-->
    <computers>
        <navigation>
            <mode type="string">bug</mode>
        </navigation>
    </computers>
    <consumables>
        <fuel>
            <tank n="0">
                <name>Fore</name>
                <selected type="bool">true</selected>
            </tank>
            <tank n="1">
                <name>Mid</name>
                <selected type="bool">true</selected>
            </tank>
            <tank n="2">
                <name>Aft</name>
                <selected type="bool">true</selected>
            </tank>
            <tank n="3">
                <name>Foreleft Wing</name>
                <selected type="bool">true</selected>
            </tank>
            <tank n="4">
                <name>Aftleft Wing</name>
                <selected type="bool">true</selected>
            </tank>
            <tank n="5">
                <name>Foreright Wing</name>
                <selected type="bool">true</selected>
            </tank>
            <tank n="6">
                <name>Aftright Wing</name>
                <selected type="bool">true</selected>
            </tank>
            <tank n="7">
                <name>Center Droptank</name>
                <selected type="bool">true</selected>
            </tank>
            <tank n="8">
                <name>Left Droptank</name>
                <selected type="bool">true</selected>
            </tank>
            <tank n="9">
                <name>Right Droptank</name>
                <selected type="bool">true</selected>
            </tank>
            <tank n="10">
                <name>Left Accumulator</name>
                <selected type="bool">true</selected>
            </tank>
            <tank n="11">
                <name>Right Accumulator</name>
                <selected type="bool">true</selected>
            </tank>
            <dump-valve type="bool">false</dump-valve>
        </fuel>
    </consumables>
    
    <engines>
        <engine n="0">
            <running>true</running>
        </engine>
        <engine n="1">
            <running>true</running>
        </engine>
        <engine n="2"> <!-- A crude "hack" to send slats over MP, because we are out of floats -->
            <n1 type="double">0</n1> <!-- L -->
            <n2 type="double">0</n2> <!-- R -->
        </engine>
    </engines>

    <fdm>
        <jsbsim include="Systems/jsbsim-props-init.xml"/>
    </fdm>

    <velocities n="0">
        <groundspeed-kt>0</groundspeed-kt>
    </velocities>
    
    <instrumentation>
      <radar>
       <range type="int" archive="y">100</range>
       <minimized type="bool" archive="y">false</minimized>
      </radar>
    </instrumentation>
    
    <systems>
      <refuel>
       <type>probe</type>
       <serviceable type="bool">true</serviceable>
       <max-fuel-transfer-lbs-min>6000</max-fuel-transfer-lbs-min>
       <offset-x-m>0</offset-x-m>
       <offset-y-m>0</offset-y-m>
       <offset-z-m>0</offset-z-m>
      </refuel>
     </systems>

<!-- Nasal files/scripts -->
    <nasal>
        <prop_io>    <file>Aircraft/eurofighter/nasal/prop_io.nas</file>        </prop_io>
        <hud>        <file>Aircraft/eurofighter/nasal/hud.nas</file>            </hud>
        <mfd>        <file>Aircraft/eurofighter/nasal/mfd.nas</file>            </mfd>
        <dialog>     <file>Aircraft/eurofighter/Nasal/dialogs.nas</file>        </dialog>
        <libraries>  <file>Aircraft/eurofighter/Nasal/zoom-views.nas</file>     </libraries>
        <main>       <file>Aircraft/eurofighter/Nasal/main.nas</file>           </main>
        <aar>  <file>Aircraft/Generic/aar.nas</file> </aar>
    </nasal>
    
</PropertyList>
