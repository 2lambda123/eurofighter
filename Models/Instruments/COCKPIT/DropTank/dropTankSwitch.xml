<?xml version="1.0"?>
<PropertyList>
	<path>DropTankSwitch.ac</path>

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<condition>
			<property>sim/rendering/rembrandt/enabled</property>
		</condition>
		<object-name>Labels</object-name>
		<object-name>Labels.Lit</object-name>
		<object-name>Button.DropOff</object-name>
		<object-name>Button.DropOn</object-name>
	</effect>

	<animation>
		<type>select</type>
		<object-name>Labels</object-name>
		<condition>
			<less-than>
				<property>systems/electrical/outputs/avionics/cockpit-lighting</property>
				<value>24</value>
			</less-than>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>Labels.Lit</object-name>
		<condition>
			<greater-than>
				<property>systems/electrical/outputs/avionics/cockpit-lighting</property>
				<value>24</value>
			</greater-than>
		</condition>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>Switch.droptank</object-name>
		<property>/controls/switches/droptank</property>
		<factor>-40</factor>
		<offset-deg>60</offset-deg>
		<axis>
			<y>-1</y>
		</axis>
		<center>
			<x-m>0.002</x-m>
			<y-m>0</y-m>
			<z-m>0.008</z-m>
		</center>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>Spot.dropprog</object-name>
		<action>
			<button>0</button>
			<binding>
				<command>property-assign</command>
				<property>/controls/switches/droptank</property>
				<value type="int">1</value>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>Spot.droptank</object-name>
		<action>
			<button>0</button>
			<binding>
				<command>property-assign</command>
				<property>/controls/switches/droptank</property>
				<value type="int">2</value>
			</binding>
		</action>
	</animation>

	<animation>
		<type>select</type>
		<object-name>Button.DropOff</object-name>
		<condition>
			<and>
				<greater-than>
					<property>systems/electrical/outputs/avionics/cockpit-lighting</property>
					<value>24</value>
				</greater-than>
				<equals>
					<property>/controls/switches/droptank</property>
					<value type="int">1</value>
				</equals>
			</and>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>Button.DropOn</object-name>
		<condition>
			<and>
				<greater-than>
					<property>systems/electrical/outputs/avionics/cockpit-lighting</property>
					<value>24</value>
				</greater-than>
				<equals>
					<property>/controls/switches/droptank</property>
					<value type="int">2</value>
				</equals>
			</and>
		</condition>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>Button.DropOff</object-name>
		<action>
			<button>0</button>
			<binding>
				<command>nasal</command>
				<condition>
					<equals>
						<property>/controls/switches/droptank</property>
						<value type="int">1</value>
					</equals>
				</condition>
				<script>load.dropArmament()</script>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>Button.DropOn</object-name>
		<action>
			<button>0</button>
			<binding>
				<command>nasal</command>
				<condition>
					<equals>
						<property>/controls/switches/droptank</property>
						<value type="int">2</value>
					</equals>
				</condition>
				<script>load.dropTanks()</script>
			</binding>
		</action>
	</animation>

	<animation>
		<type>material</type>
		<object-name>Labels.Lit</object-name>
		<emission>
			<red>0.5</red>
			<green>0.5</green>
			<blue>0.5</blue>
			<factor-prop>/instrumentation/illumination/console-backlight</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>Button.DropOff</object-name>
		<ambient>
			<red>0.0</red>
			<green>0.6</green>
			<blue>0.0</blue>
		</ambient>
		<diffuse>
			<red>0.0</red>
			<green>0.6</green>
			<blue>0.0</blue>
		</diffuse>
		<emission>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
			<factor-prop>/instrumentation/illumination/LCD</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>Button.DropOn</object-name>
		<ambient>
			<red>0.0</red>
			<green>0.6</green>
			<blue>0.0</blue>
		</ambient>
		<diffuse>
			<red>0.0</red>
			<green>0.6</green>
			<blue>0.0</blue>
		</diffuse>
		<emission>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
			<factor-prop>/instrumentation/illumination/LCD</factor-prop>
		</emission>
	</animation>
 
	<animation>
		<type>material</type>
		<object-name>Switch.droptank</object-name>
		<condition>
			<greater-than>
				<property>/systems/electrical/outputs/avionics/cockpit-lighting</property>
				<value>24</value>
			</greater-than>
			<not><property>sim/rendering/rembrandt/enabled</property></not>
			<property>/controls/switches/lighting-day-night</property>
		</condition>
		<emission>
			<red>0.5</red>
			<green>0.4</green>
			<blue>0.4</blue>
			<factor-prop>/instrumentation/illumination/cockpit-floods-forward</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>Switch.droptank</object-name>
		<condition>
			<greater-than>
				<property>/systems/electrical/outputs/avionics/cockpit-lighting</property>
				<value>24</value>
			</greater-than>
			<not><property>sim/rendering/rembrandt/enabled</property></not>
			<property>/controls/switches/lighting-day-night</property>
		</condition>
		<emission>
			<red>0.5</red>
			<green>0.5</green>
			<blue>0.5</blue>
			<factor-prop>/instrumentation/illumination/cockpit-floods-forward</factor-prop>
		</emission>
	</animation>

</PropertyList>
