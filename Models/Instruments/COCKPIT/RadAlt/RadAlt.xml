<?xml version="1.0"?>
<PropertyList>
	<path>RadAlt.ac</path>
	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<condition>
			<property>sim/rendering/rembrandt/enabled</property>
		</condition>
		<object-name>Labels</object-name>
		<object-name>Labels.Lit</object-name>
	</effect>
	<animation>
		<type>select</type>
		<object-name>Labels</object-name>
		<condition>
			<less-than>
				<property>systems/electrical/outputs/avionics/cockpit-lighting</property>
				<value>24</value>
			</less-than>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>Labels.Lit</object-name>
		<object-name>low-height</object-name>
		<condition>
			<greater-than>
				<property>systems/electrical/outputs/avionics/cockpit-lighting</property>
				<value>24</value>
			</greater-than>
		</condition>
	</animation>
	<text>
		<name>low-height</name>
		<font>lcd.txf</font>
		<character-size type="double">0.00475</character-size>
		<offsets>
			<x-m>0.006</x-m>
			<y-m>0.026</y-m>
			<z-m>0.011</z-m>
			<pitch-deg>0</pitch-deg>
		</offsets>
		<axis-alignment>yz-plane</axis-alignment>
		<type type="string">number-value</type>
		<property>/instrumentation/radar-altimeter/agl-setting</property>
		<format>%4.0f</format>
		<draw-text type="bool">true</draw-text>
		<alignment>right-center</alignment>
	</text>
