<PropertyList>
	<path>cockpit-lights.ac</path>

	<animation>
		<type>select</type>
		<object-name>floods.red.1</object-name>
		<object-name>floods.red.2</object-name>
		<object-name>floods.red.3</object-name>
		<object-name>floods.red.4</object-name>
		<condition>
			<property>/controls/switches/lighting-day-night</property>
			<property>/sim/rendering/rembrandt/enabled</property>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>floods.white.1</object-name>
		<object-name>floods.white.2</object-name>
		<object-name>floods.white.3</object-name>
		<condition>
			<not><property>/controls/switches/lighting-day-night</property></not>
			<property>/sim/rendering/rembrandt/enabled</property>
		</condition>
	</animation>

	<animation>
		<type>light</type>
		<light-type>spot</light-type>
		<object-name>floods.red.1</object-name>
		<nopreview/>
		<direction><x>-0.85</x><y>-0.2</y><z>-1.2</z></direction>
		<position><x>4.25</x><y>0</y><z>2.1</z></position>
		<ambient><r>0.2</r><g>0.0</g><b>0.0</b><a>1</a></ambient>
		<diffuse><r>0.4</r><g>0.2</g><b>0.2</b><a>1</a></diffuse>
		<specular><r>0.7</r><g>0.35</g><b>0.35</b><a>1</a></specular>
		<attenuation><c>0.8</c><l>0.07</l><q>0</q></attenuation>
		<exponent>50.0</exponent>
		<cutoff>20</cutoff>
		<near-m>0.1</near-m>
		<far-m>8</far-m>
		<dim-factor>
			<property>/instrumentation/illumination/cockpit-floods-forward</property>
		</dim-factor>
	</animation>

	<animation>
		<type>light</type>
