	<animation>
		<type>pick</type>
		<object-name>knobR</object-name>
		<action>
			<button>4</button>
			<repeatable>true</repeatable>
			<binding>
      <condition>
        <less-than>
          <property>/controls/rotary/map-brightness</property>
          <value>1</value>
        </less-than>
      </condition>
				<command>nasal</command>
				<script>avionics.controls.mapDim(1);</script>
			</binding>
		</action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>mapdim</tooltip-id>
        <label>Map Light %1.0f%%</label>
        <mapping>percent</mapping>
        <property>/controls/rotary/map-brightness</property>
      </binding>
    </hovered>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>knobR</object-name>
		<action>
			<button>3</button>
			<repeatable>false</repeatable>
			<binding>
      <condition>
        <greater-than>
          <property>/controls/rotary/map-brightness</property>
          <value>0</value>
        </greater-than>
      </condition>
				<command>nasal</command>
				<script>avionics.controls.mapDim(0);</script>
			</binding>
		</action>
	</animation>

	<animation>
		<type>select</type>
		<object-name>MFDButtonTopbar.015</object-name>
		<condition>
			<equals>
				<property>instrumentation/enav[1]/wind-display</property>
				<value>1</value>
			</equals>
		</condition>
	</animation>

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<condition>
			<property>/sim/rendering/rembrandt/enabled</property>
		</condition>
		<object-name>MFDButtonTopbar.004</object-name>
		<object-name>MFDButtonLowbar.004</object-name>
		<object-name>MFDButtonTopbar.001</object-name>
		<object-name>MFDButtonLowbar.001</object-name>
		<object-name>MFDButtonTopbar.003</object-name>
		<object-name>MFDButtonLowbar.003</object-name>
	</effect>
	<animation>
		<type>material</type>
		<object-name>MFDButtonTopbar.004</object-name>
		<object-name>MFDButtonLowbar.004</object-name>
		<object-name>MFDButtonTopbar.001</object-name>
		<object-name>MFDButtonLowbar.001</object-name>
		<object-name>MFDButtonTopbar.003</object-name>
		<object-name>MFDButtonLowbar.003</object-name>
		<diffuse>
			<red>0.1</red>
			<green>0.1</green>
			<blue>0.1</blue>
		</diffuse>
		<emission>
			<red>0.3</red>
			<green>0.8</green>
			<blue>0.3</blue>
			<factor-prop>/instrumentation/illumination/LCD</factor-prop>
		</emission>
