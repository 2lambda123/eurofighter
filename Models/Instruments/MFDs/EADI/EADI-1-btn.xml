<?xml version="1.0"?>
<PropertyList>
	<path>Aircraft/eurofighter/Models/Instruments/MFDs/mfd-buttons.ac</path>

	<animation>
		<type>pick</type>
		<object-name>L1</object-name>
		<action>
			<button>0</button>
			<binding>
				<command>dialog-show</command>
				<dialog-name>map</dialog-name>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>L1</object-name>
		<action>
			<button>1</button>
			<binding>
				<command>dialog-close</command>
				<dialog-name>map</dialog-name>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>knobL</object-name>
		<action>
			<button>4</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>/systems/autopilot/settings/target-speed-kt</property>
				<step>5</step>
				<min>150</min>
				<max>600</max>
				<wrap>false</wrap>
			</binding>
		</action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>APspeed</tooltip-id>
        <label>AP Speed set</label>
      </binding>
    </hovered>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>knobL</object-name>
		<action>
			<button>3</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>/systems/autopilot/settings/target-speed-kt</property>
				<step>-5</step>
				<min>150</min>
				<max>600</max>
				<wrap>false</wrap>
			</binding>
		</action>
	</animation>

	<animation>
		<type>select</type>
		<object-name>MFDButtonTopbar.005</object-name>
		<condition>
			<equals>
				<property>/instrumentation/MFD[1]/page-selected</property>
				<value>eadi</value>
			</equals>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>MFDButtonLowbar.005</object-name>
		<condition>
			<equals>
				<property>/instrumentation/MFD[1]/page-selected</property>
				<value>eadi</value>
			</equals>
		</condition>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>R1</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/MFD[1]/page-selected</property>
				<value>nav2d</value>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>L5</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/MFD[1]/page-selected</property>
				<value>proc</value>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>knobR</object-name>
		<action>
			<button>4</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>/systems/autopilot/settings/target-altitude-ft</property>
				<step>100</step>
				<min>200</min>
				<max>60000</max>
				<wrap>false</wrap>
			</binding>
		</action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>APalt</tooltip-id>
        <label>AP Alt set</label>
      </binding>
    </hovered>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>knobR</object-name>
		<action>
			<button>3</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>/systems/autopilot/settings/target-altitude-ft</property>
				<step>-100</step>
				<min>200</min>
				<max>60000</max>
				<wrap>false</wrap>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>C2</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/MFD[1]/page-selected</property>
				<value>engman</value>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>C3</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/MFD[1]/page-selected</property>
				<value>hydraulic</value>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>C4</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/MFD[1]/page-selected</property>
				<value>enav</value>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>C1</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/MFD[1]/page-selected</property>
				<value>fuel</value>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>C5</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/MFD[1]/page-selected</property>
				<value>frequencies</value>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>R6</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>sim/model/click</property>
			</binding>
			<binding>
				<command>property-toggle</command>
				<property>instrumentation/mfd/inhg-hpa</property>
			</binding>
		</action>
	</animation>

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<condition>
			<property>/sim/rendering/rembrandt/enabled</property>
		</condition>
		<object-name>MFDButtonTopbar.005</object-name>
		<object-name>MFDButtonLowbar.005</object-name>
	</effect>

	<animation>
		<type>material</type>
		<object-name>MFDButtonTopbar.005</object-name>
		<object-name>MFDButtonLowbar.005</object-name>
		<diffuse>
			<red>0.1</red>
			<green>0.1</green>
			<blue>0.1</blue>
		</diffuse>
		<emission>
			<red>0.3</red>
			<green>0.8</green>
			<blue>0.3</blue>
			<factor-prop>/instrumentation/illumination/LCD</factor-prop>
		</emission>
	</animation>
</PropertyList>
