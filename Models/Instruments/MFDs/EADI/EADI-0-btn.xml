			</binding>
			<binding>
				<command>property-toggle</command>
				<property>instrumentation/mfd/inhg-hpa</property>
			</binding>
		</action>
	</animation>

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<condition>
			<property>/sim/rendering/rembrandt/enabled</property>
		</condition>
		<object-name>MFDButtonTopbar.005</object-name>
		<object-name>MFDButtonLowbar.005</object-name>
	</effect>

	<animation>
		<type>material</type>
		<object-name>MFDButtonTopbar.005</object-name>
		<object-name>MFDButtonLowbar.005</object-name>
		<object-name>MFDButtonTopbar.015</object-name>
		<object-name>MFDButtonLowbar.015</object-name>
		<diffuse>
			<red>0.1</red>
			<green>0.1</green>
			<blue>0.1</blue>
		</diffuse>
		<emission>
			<red>0.3</red>
			<green>0.8</green>
			<blue>0.3</blue>
			<factor-prop>/instrumentation/illumination/LCD</factor-prop>
