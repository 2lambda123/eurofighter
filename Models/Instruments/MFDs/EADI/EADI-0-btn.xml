<?xml version="1.0"?>
<PropertyList>
	<path>Aircraft/eurofighter/Models/Instruments/MFDs/mfd-buttons.ac</path>

	<animation>
		<type>pick</type>
		<object-name>L1</object-name>
		<action>
			<button>0</button>
			<binding>
				<command>dialog-show</command>
				<dialog-name>map</dialog-name>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>L1</object-name>
		<action>
			<button>1</button>
			<binding>
				<command>dialog-close</command>
				<dialog-name>map</dialog-name>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>L5</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/MFD[0]/page-selected</property>
				<value>situana</value>
			</binding>
		</action>
	</animation>

	<animation>
		<type>select</type>
		<object-name>MFDButtonTopbar.005</object-name>
		<condition>
			<equals>
				<property>/instrumentation/MFD[0]/page-selected</property>
				<value>eadi</value>
			</equals>
		</condition>
	</animation>

	<animation>
		<type>select</type>
