		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/MFD[0]/page-selected</property>
				<value>fuel</value>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
