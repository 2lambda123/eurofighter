<?xml version="1.0"?>
<PropertyList>
	<path>Aircraft/eurofighter/Models/Instruments/MFDs/mfd-buttons.ac</path>

	<animation>
		<type>pick</type>
		<object-name>R1</object-name>
		<action>
			<button>0</button>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/MFD[2]/page-selected</property>
				<value>nav2d</value>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>R4</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>hud.switch_distance(1)</script>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>R3</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>setprop("instrumentation/radar/az-field",typhoon.myRadar3.radar_mode_toggle());</script>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>R5</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>hud.switch_distance(-1)</script>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>L3</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>radar.toggle_radar_standby();</script>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>R2</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/radar/radar-standby</property>
				<value>0</value>
			</binding>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/MFD[2]/page-selected</property>
				<value>off</value>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>L4</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>hud.next_Target_Index()</script>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>L5</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>hud.previous_Target_Index()</script>
			</binding>
		</action>
	</animation>
 <animation>
  <type>pick</type>
  <object-name>L6</object-name>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>property-assign</command>
      <property>instrumentation/MFD[2]/page-selected</property>
    <value>eadi</value>
    </binding>
  </action>
 </animation>


<animation>
  <type>pick</type>
  <object-name>C1</object-name>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>property-assign</command>
      <property>instrumentation/MFD[2]/page-selected</property>
    <value>fuel</value>
    </binding>
  </action>
</animation>

<animation>
  <type>pick</type>
  <object-name>C2</object-name>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>property-assign</command>
      <property>instrumentation/MFD[2]/page-selected</property>
    <value>engman</value>
    </binding>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>C3</object-name>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>property-assign</command>
      <property>instrumentation/MFD[2]/page-selected</property>
    <value>hydraulic</value>
    </binding>
  </action>
</animation>

	<animation>
		<type>pick</type>
		<object-name>C4</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/MFD[2]/page-selected</property>
				<value>stor</value>
			</binding>
		</action>
	</animation>

 <animation>
  <type>select</type>
  <object-name>MFDButtonTopbar.002</object-name>
  <condition>
   <equals>
    <property>instrumentation/radar/radar-standby</property>
    <value>1</value>
   </equals>
  </condition>
 </animation>
  
 <animation>
  <type>select</type>
  <object-name>MFDButtonLowbar.002</object-name>
  <condition>
   <equals>
    <property>instrumentation/radar/radar-standby</property>
    <value>1</value>
   </equals>
  </condition>
 </animation>
 
 <animation>
  <type>select</type>
  <object-name>MFDButtonTopbar.010</object-name>
  <condition>
   <equals>
    <property>/instrumentation/MFD[2]/page-selected</property>
    <value>radar</value>
   </equals>
  </condition>
 </animation>
  
 <animation>
  <type>select</type>
  <object-name>MFDButtonLowbar.010</object-name>
  <condition>
   <equals>
    <property>/instrumentation/MFD[2]/page-selected</property>
    <value>radar</value>
   </equals>
  </condition>
 </animation>
 
  <effect>
   <inherits-from>Effects/model-transparent</inherits-from>
   <condition>
    <property>/sim/rendering/rembrandt/enabled</property>
   </condition>
  <object-name>MFDButtonTopbar.010</object-name>
  <object-name>MFDButtonLowbar.010</object-name>
  <object-name>MFDButtonTopbar.002</object-name>
  <object-name>MFDButtonLowbar.002</object-name>
  </effect>
  
<animation>
  <type>material</type>
  <object-name>MFDButtonTopbar.010</object-name>
  <object-name>MFDButtonLowbar.010</object-name>
  <object-name>MFDButtonTopbar.002</object-name>
  <object-name>MFDButtonLowbar.002</object-name>
 <diffuse>
    <red>0.1</red>
    <green>0.1</green>
    <blue>0.1</blue>
  </diffuse>
  <emission>
    <red>0.3</red>
    <green>0.8</green>
    <blue>0.3</blue>
    <factor-prop>/instrumentation/illumination/LCD</factor-prop>
  </emission>
</animation>	
	

</PropertyList>
