	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>20</max-m>
	</animation>
	<panel>
		<path>Aircraft/eurofighter/Models/Instruments/MIDS/mids-screen.xml</path>
		<bottom-left>
			<x-m>-0.452</x-m>
			<y-m>-0.315</y-m>
